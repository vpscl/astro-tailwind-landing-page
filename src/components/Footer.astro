---
import Logo from "./Logo.astro";
import Button from "./Button.astro";
---

<div class="container flex flex-col items-center py-8 gap-4">
  <div class="w-32">
    <Logo />
  </div>
  <ul class="flex justify-center gap-4 text-xs text-zinc-700 sm:gap-6 md:gap-8">
    <li>
      <a
        href="#"
        class="duration-300 text-zinc-700 hover:tracking-wider hover:text-primary"
        >Home</a
      >
    </li>
    <li>
      <a
        href="#"
        class="duration-300 text-zinc-700 hover:tracking-wider hover:text-primary"
        >About</a
      >
    </li>
    <li>
      <a
        href="#"
        class="duration-300 text-zinc-700 hover:tracking-wider hover:text-primary"
        >Services</a
      >
    </li>
    <li>
      <a
        href="#"
        class="duration-300 text-zinc-700 hover:tracking-wider hover:text-primary"
        >Features</a
      >
    </li>
    <li>
      <a
        href="#"
        class="duration-300 text-zinc-700 hover:tracking-wider hover:text-primary"
        >Contact</a
      >
    </li>
  </ul>

  <span class="h-px w-full bg-zinc-200 my-4"></span>

  <div class="flex flex-col items-center w-full md:flex-row md:justify-between">
    <div class="flex flex-col items-center gap-3 w-full sm:flex-row sm:w-auto">
      <input
        type="email"
        placeholder="Enter your email"
        class="rounded-md py-1 px-3 border text-sm w-2/3 text-zinc-500 border-primary sm:w-auto focus:outline-none"
      />
      <Button text="Subscribe now" solid/>
    </div>
    <ul class="flex gap-2 -ms-[.2rem] mt-8 md:mt-0">
      <li class="flex items-center">
        <a href="/" class="flex items-center"
          ><box-icon name="linkedin-square" type="logo" color="#D9646A"
          ></box-icon></a
        >
      </li>
      <li  class="flex items-center">
        <a href="/"  class="flex items-center"
          ><box-icon name="instagram-alt" type="logo" color="#D9646A"
          ></box-icon></a
        >
      </li>
      <li  class="flex items-center">
        <a href="/"  class="flex items-center"
          ><box-icon type="logo" name="facebook-square" color="#D9646A"
          ></box-icon></a
        >
      </li>
      <li  class="flex items-center">
        <a href="/"  class="flex items-center"
          ><box-icon name="twitter" type="logo" color="#D9646A"></box-icon></a
        >
      </li>
      <li  class="flex items-center">
        <a href="/"  class="flex items-center"
          ><box-icon name="github" type="logo" color="#D9646A"></box-icon></a
        >
      </li>
    </ul>
  </div>

  <p class="text-xs text-zinc-500 mx-auto mt-4 text-center md:mt-10">
    &copy; {new Date().getFullYear()}. All rights reserved. Designed with ❤️ by <a class="text-primary font-semibold duration-300 underline-offset-2 hover:underline" href="https://github.com/christinnaa" target="_blank">christinnaa</a>.
  </p>
</div>
